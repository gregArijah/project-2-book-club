<!-- Loop over each object in the books array -->
{{#each books as |book| }}
<div class="row mb-4 book">
  <div>
    
  </div>
  <div class="col-md-5">
    <img src = {{book.image}} >
    <h2>
      <a href="/book/{{book.id}}">{{book.name}}</a>
    </h2>
    <p>
      <span>by {{book.author}}</span>
      
    </p>
    <p>Added by {{book.user.name}} on {{format_date book.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{book.description}}
    </p>
  </div>
</div>
{{/each}}
